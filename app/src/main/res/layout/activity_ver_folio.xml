<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context="com.pbs.PBshop.Activities.Folios.verFolio" android:id="@+id/cln">


    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="42dp" android:id="@+id/cliente" android:gravity="bottom|center"/>
    <Button
            android:text="Seleccionar cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/seleccionCliente"/>
    <TextView
            android:text="Nombre del Cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/sa" android:gravity="center"
            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>
