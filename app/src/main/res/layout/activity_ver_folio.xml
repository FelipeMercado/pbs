<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"

        tools:context="com.pbs.PBshop.Activities.Folios.verFolio" android:id="@+id/ws">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <Button
                    android:text="Seleccionar cliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/seleccionCliente"/>
            <TextView
                    android:text="Nombre del Cliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/sa" android:gravity="center"
                    android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Marca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text=""
                        android:ems="10"
                        android:id="@+id/marca"/>
                <TextView
                        android:text="Modelo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"  />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                         android:ems="10"
                        android:id="@+id/modelo"/>
                <TextView
                        android:text="Serial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView8"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text=""
                        android:ems="10"
                        android:id="@+id/serial"/>
                <TextView
                        android:text="Año"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView9"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text=""
                        android:ems="10"
                        android:id="@+id/año"/>
                <TextView
                        android:text="Extras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/gravi" android:gravity="center"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="textPersonName"
                        android:text=""
                        android:ems="400"
                        android:id="@+id/extraComentario"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/tasks"
                        android:layout_width="match_parent"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content">
                    <Button
                            android:text="Añadir tarea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/addTask"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
