<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.Menu"
        android:scrollbars="vertical"
        android:background="#F5F5F5"
        android:padding="15dp"
        android:orientation="vertical">
    <ScrollView
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                    android:background="#F5F5F5"
                    android:orientation="vertical"
                    android:shadowRadius="10"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:elevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                            android:text="Bienvenido "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/Mensaje"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_orange_dark"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=" Trabajos activos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cA"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="18sp"
                            android:background="@android:color/holo_orange_dark"
                            android:textStyle="bold"/>
                    <TextView
                            android:text="5"
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:background="@color/cardview_light_background"/>
                    <TextView
                            android:text="Total de clientes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="18sp"
                            android:background="@android:color/holo_orange_dark"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ClientesA"
                            android:paddingLeft="10dp"
                            android:textSize="18sp"
                            android:text="4"
                            android:textColor="@android:color/holo_blue_dark"
                            android:background="@color/cardview_light_background"/>
                    <TextView
                            android:text="Trabajos que terminan este mes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"

                            android:textColor="@color/cardview_light_background"
                            android:textSize="18sp"
                            android:background="@android:color/holo_orange_dark"
                            android:textStyle="bold"/>
                    <TextView
                            android:text="2"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ttm"
                            android:textSize="18sp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:background="@color/cardview_light_background"/>

                    <!--- Terminan los datos-->




                <TextView
                        android:text="Clientes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/clientes"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/cardview_light_background"
                        android:background="@android:color/holo_orange_dark"
                        android:textStyle="bold"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:padding="20dp">


                        <Button
                                android:text="Lista de Clientes"
                                android:layout_width="125dp"
                                android:layout_height="match_parent"
                                android:id="@+id/tc"
                                android:textAppearance="@android:style/TextAppearance.Material.Menu"
                                android:background="@android:color/holo_blue_dark"
                                android:textColor="@color/cardview_light_background"
                                android:layout_weight="1"/>
                        <TextView
                                android:text=""
                                android:layout_width="50dp"

                                android:layout_height="match_parent"
                                android:id="@+id/textView"
                                android:layout_weight="1"/>
                        <Button
                                android:text="Registrar Cliente"
                                android:layout_width="125dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:id="@+id/nc"
                                android:textAppearance="@android:style/TextAppearance.Material.Menu"
                                android:background="@android:color/holo_blue_dark"
                                android:textColor="@color/cardview_light_background"
                               />

                    </LinearLayout>

                <!--  Termina el area de clientes-->



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="150dp"
                      android:orientation="vertical"
        >
            <TextView
                    android:text="Folios"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_light_background"
                    android:background="@android:color/holo_orange_dark"
                    android:textStyle="bold"/>
                    <!--   Aqui empiezan los primeros botones folios  -->
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="150dp"
                                  android:orientation="horizontal"
                                  android:padding="20dp"
                    >
                        <Button
                                android:text="Todos"
                                android:layout_width="125dp"
                                android:layout_height="match_parent"
                                android:id="@+id/tf"
                                android:layout_weight="1"
                                android:textColor="@color/cardview_light_background"
                                android:background="@android:color/holo_blue_dark"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                        <TextView
                                android:text=""
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:id="@+id/textView2"
                                android:layout_weight="1"/>
                        <Button
                                android:text="Nuevo"
                                android:layout_width="125dp"
                                android:layout_height="match_parent"
                                android:id="@+id/nf"
                                android:layout_weight="1"
                                android:textColor="@color/cardview_light_background"
                                android:background="@android:color/holo_blue_dark"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                     </LinearLayout>
            </LinearLayout>




                <!--Area de tres buttoons -->

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="150dp"
                              android:orientation="horizontal"
                              android:padding="20dp"
                >
                    <Button
                            android:text="En espera"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:id="@+id/espera"
                            android:layout_weight="1"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_blue_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/e"
                            android:layout_weight="1"/>
                    <Button
                            android:text="En proceso"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:id="@+id/proceso"
                            android:layout_weight="1"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_blue_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                </LinearLayout>



                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="150dp"
                              android:orientation="horizontal"
                              android:padding="20dp"
                >
                    <Button
                            android:text="Terminados"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:id="@+id/terminados"
                            android:layout_weight="1"
                            android:textColor="@color/cardview_light_background"
                            android:background="@android:color/holo_blue_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    <TextView
                            android:text=""
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:id="@+id/se"
                            android:layout_weight="1"/>
                    <Button
                            android:text="En proceso"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:id="@+id/inv"
                            android:layout_weight="1"
                            android:textColor="@color/cardview_light_background"
                            android:visibility="invisible"
                            android:enabled="false"
                            android:background="@android:color/holo_blue_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                </LinearLayout>

                <!--Area de tres buttoons -->

            </LinearLayout>




    </ScrollView>

</LinearLayout>